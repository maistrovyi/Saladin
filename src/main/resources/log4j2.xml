<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>

        <RollingFile name="RollingFile" fileName="${sys:catalina.home}\logs\IntegrationControl-${date:yyyy-MM-dd}.log"
                     filePattern="${sys:catalina.home}\logs\IntegrationControl-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <pattern>%d{dd/MMM/yyyy HH:mm:ss,SSS}- %c{1}: %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!--<SizeBasedTriggeringPolicy size="1 MB"/>-->
            </Policies>
            <!--<DefaultRolloverStrategy max="10"/>-->
        </RollingFile>

        <!--<File name="FILE" fileName="${sys:catalina.home}\logs\IntegrationControl-${date:yyyy-MM-dd}.log" append="true">-->
        <!--<PatternLayout pattern="%-5p | %d{HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>-->
        <!--</File>-->

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p | %d{HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.maystrovoy" level="debug"/>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
            <!--<AppenderRef ref="FILE"/>-->
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>